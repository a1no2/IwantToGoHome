<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".MainActivity">

	<TextView
		android:id="@+id/kae_text"
		android:text="帰"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="2"
		android:textSize="@dimen/top_textsize"
		android:textColor="@color/textcolor_black"
		android:gravity="center"
		android:layout_margin="16dp"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:orientation="horizontal">

		<Button
			android:id="@+id/home_btn1"
			android:text="@string/HomeName_text"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:textSize="@dimen/homeName_textsize"
			android:layout_marginRight="16dp"
			android:layout_marginLeft="16dp"
			android:textColor="@color/textcolor_black"/>


		<Button
			android:id="@+id/home_btn2"
			android:text="@string/HomeName_text"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:textSize="@dimen/homeName_textsize"
			android:layout_marginRight="16dp"
			android:layout_marginLeft="16dp"
			android:textColor="@color/textcolor_black"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:orientation="horizontal"
		android:layout_marginTop="16dp">

		<Button
			android:id="@+id/home_btn3"
			android:text="@string/HomeName_text"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:textSize="@dimen/homeName_textsize"
			android:layout_marginRight="16dp"
			android:layout_marginLeft="16dp"
			android:textColor="@color/textcolor_black"/>


		<Button
			android:id="@+id/home_btn4"
			android:text="@string/HomeName_text"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:textSize="@dimen/homeName_textsize"
			android:layout_marginRight="16dp"
			android:layout_marginLeft="16dp"
			android:textColor="@color/textcolor_black"/>

	</LinearLayout>

	<Button
		android:id="@+id/setting_btn"
		android:text="帰る場所の設定"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:textSize="@dimen/setting_textsize"
		android:textColor="@color/textcolor_black"
		android:layout_marginTop="24dp"
		android:layout_marginBottom="24dp"
		android:layout_marginLeft="104dp"
		android:layout_marginRight="104dp"/>
</LinearLayout>

